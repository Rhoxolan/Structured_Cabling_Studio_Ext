@model SignInViewModel
@{
	ViewData["Title"] = Localizer["SignIn page title"];
}

<h4>
	@Localizer["Signin with Google to watch history"]
</h4>
<form asp-controller="@nameof(Account)" asp-action="@nameof(Account.SignInWithGoogle)" method="post" class="mt-3">
	<input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
	<button type="submit" class="btn btn-outline-primary">
		<i class="bi bi-google"></i> @Localizer["Sign In with Google"]
	</button>
</form>
