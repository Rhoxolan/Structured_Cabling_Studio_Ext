@model IEnumerable<CablingConfigurationEntity>


<h5 class="d-sm-none mb-4">
	@Localizer["Welcome,"] <span id="eMailDisplayHistoryPageSpan" class="text-primary">@User.Identity!.Name</span>!
</h5>

<h5 class="mb-3">
	@Localizer["History:"]
</h5>


<div class="mb-3">
	<div class="row">
		<div class="col-11 col-sm-9 col-xxl-10">
			<div class="form-control border-primary mb-2 mb-sm-0" id="configurationsListUlDiv">
				<ul class="ps-1">
					@foreach (var configuration in Model)
					{
						<li data-id="@configuration.Id" class="configurationsListLi p-3 pt-2">
							<div>
								<div>
									@configuration.RecordTime.ToShortDateString() @configuration.RecordTime.ToLongTimeString()
								</div>
								<div>
									@Localizer["MinPermanentLink"] @configuration.MinPermanentLink.ToString("F2") @Localizer["m"]
								</div>
								<div>
									@Localizer["MaxPermanentLink"] @configuration.MaxPermanentLink.ToString("F2") @Localizer["m"]
								</div>
								@if (configuration.HankQuantity != null)
								{
									<div>
										@Localizer["HankQuantity"] @configuration.HankQuantity.Value.ToString()
									</div>
								}
								<div class="fw-semibold">
									@Localizer["CableQuantity"] @configuration.TotalCableQuantity.ToString("F2") @Localizer["m"]
								</div>
							</div>
						</li>
					}
				</ul>
			</div>
		</div>
		<div class="col-11 col-sm">
			<button id="saveToTxtButton" class="historyPageButton btn btn-outline-primary mb-2">
				<i class="bi bi-filetype-txt"></i> @Localizer["Save to TXT"]
			</button>
			<br />
			<button id="deleteButton" class="historyPageButton btn btn-outline-danger mb-2">
				<i class="bi bi-trash3"></i> @Localizer["Delete"]
			</button>
			<br />
			<button id="deleteAllButton" class="historyPageButton btn btn-outline-danger mb-2">
				<i class="bi bi-trash3-fill"></i> @Localizer["Delete all"]
			</button>
			<br />
		</div>
	</div>
</div>
