@{
	var requestCulture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
}

<!DOCTYPE html>
<html lang="@requestCulture?.RequestCulture.UICulture.TwoLetterISOLanguageName">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Structured Cabling Studio</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Structured Cabling Studio.styles.css" asp-append-version="true" />
</head>

<body>

	<header>
		<nav id="siteNav" class="navbar navbar-expand-lg navbar-toggleable-lg navbar-dark border-dark border-opacity-10 border-bottom box-shadow p-0 py-lg-1">

			<div class="container-fluid">

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#verticalSiteNavbarDiv" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<a id="brandDisplay" class="navbar-brand fw-semibold" asp-controller="@nameof(Calculation)" asp-action="@nameof(Calculation.Calculate)">Structured Cabling Studio</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#siteNavbarDiv" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div id="siteNavbarDiv" class="navbar-collapse collapse d-lg-inline-flex me-0 me-sm-1 me-md-2 me-lg-3 pt-2 pt-sm-0">
					<ul class="align-items-center navbar-nav flex-grow-1 flex-row-reverse">
						<li class="siteNavbarLi nav-item me-2">
							<div class="navLinkText nav-link text-white">
								@await Html.PartialAsync("_SelectLanguagePartial")
							</div>
						</li>
						<li class="navLinkText nav-item me-4 me-sm-5 me-lg-4">
							@await Html.PartialAsync("_SignInWithGooglePartial")
						</li>
					</ul>
				</div>

			</div>
		</nav>
	</header>

	<div class="container-fluid d-flex ps-0">

		<nav id="verticalSiteNav" class="navbar navbar-expand-lg align-items-start p-0">
			<div id="verticalSiteNavbarDiv" class="navbar-collapse collapse">
				<ul class="navbar-nav flex-column">
					<li class="verticalSiteNavbarLi nav-item p-1 px-3">
						<a asp-controller="@nameof(Calculation)" asp-action="@nameof(Calculation.Calculate)" class="nav-link text-white fw-semibold">
							<div class="verticalSiteNavbarText">
								<i class="bi bi-calculator-fill"></i> @Localizer["Calculation"]
							</div>
						</a>
					</li>
					<li class="verticalSiteNavbarLi nav-item p-1 px-3">
						<a asp-controller="@nameof(Calculation)" asp-action="@nameof(Calculation.History)" class="nav-link text-white fw-semibold">
							<div class="verticalSiteNavbarText">
								<i class="bi bi-file-text-fill"></i> @Localizer["History"]
							</div>
						</a>
					</li>
					<li class="verticalSiteNavbarLi nav-item p-1 px-3">
						<a asp-controller="@nameof(Calculation)" asp-action="@nameof(Calculation.Information)" class="nav-link text-white fw-semibold">
							<div class="verticalSiteNavbarText">
								<i class="bi bi-info-circle-fill"></i> @Localizer["Information"]
							</div>
						</a>
					</li>
				</ul>
			</div>
		</nav>

		<div class="container">
			<main role="main" class="py-2 px-lg-4">
				@RenderBody()
			</main>
		</div>

	</div>

	<footer id="siteFooterText" class="position-absolute border-top footer text-nowrap text-muted w-100">
		<div class="container">
			<a href="https://www.linkedin.com/company/the-structured-cabling-studio-project">The Structured Cabling Studio Project</a> &#8211; @System.DateTime.Now.Year
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/_SignInWithGooglePartial.js" asp-append-version="true"></script>
	<script src="~/js/_SelectLanguagePartial.js" asp-append-version="true"></script>
	<script src="~/js/_Layout.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
